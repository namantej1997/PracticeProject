<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#db2e45" />
            <gradient android:angle="-90" android:startColor="#961b15" android:endColor="#bf261e"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#961b15" />
            <solid android:color="#bf261e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#961b15" />
            <gradient android:angle="-90" android:startColor="#db2e45" android:endColor="#bf261e" />
        </shape>
    </item>
</selector>